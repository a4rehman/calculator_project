class Atm:
    def__init__(self):

                self.__pin = ''
                self.__balance = 0

    def menu(self):
        user_input = input('''
                         Hello! how would you like to proceed?
                         1.Press 1 to create pin code.
                         2.Press 2 to deposit cash.
                         3.Press 3 to withdraw.
                         4.Press 4 to check balance.
                         5.Press 5 to exit.

                                   ''')
        if user_input == '1':
            self.create_pin()
        elif user_input == '2':
            self.deposit()
        elif user_input == '3':
            self.withdraw()
        elif user_input == '4':
            self.check_balance()
        else:
            print("Exit")
            return


    def create_pin(self):
        self.__pin = input("Enter your new pin code.")
        print("Code create successfully.")


    def deposit(self):
        temp_pin = input("Enter your pin code")
        if temp_pin == self.__pin:
            amount = int(input("Enter your amount."))
            self.__balance += amount
            print("Your cash is deposit successfully.")
        else:
            print("You entered wrong pin code.")


    def withdraw(self):
        temp_pin = input("Enter your pin code")
        if temp_pin == self.__pin:
            amount = int(input("Enter your withdraw amount."))
            if amount < self.__balance:
                self.__balance -= amount
                print("Your cash is withdraw successfully.")
                print("Balance of your account is :", self.__balance)
            else:
               print("You don't have enough balance ")
        else:
            print("You entered wrong pin code.")


    def check_balance(self):
        temp_pin = input("Enter your pin code")
        if temp_pin == self.__pin:
            print("Balance of your account is :", self.__balance)
        else:
            print("You entered wrong pin code.")



